{% extends "layouts/base_html.twig" %}

{% block CONTENT %}
	<section class="index-login">
		<div class="wrapper">
			<div class="index-login-signup">
				<h4>SIGN UP</h4>
				<p>Don't have an account yet? Sign up here!</p>
				<form action="{{ route ('register-user') }}" method="post">
					{{ csrf_field () }}
					{% if session ('success') %}
						<div class="alert alert-sucess">{{ session ('success') }}</div>
					{% endif %}
					{% if session ('fail') %}
						<div class="alert alert-sucess">{{ session ('fail') }}</div>
					{% endif %}

					<input type="text" name="uid" value="{{ old ('name') }}" placeholder="Username">
					<input type="password" name="pwd" placeholder="Password">
					<input type="password" name="pwdrepeat" placeholder="Repeat Password">
					<input type="text" name="email" value="{{ old ('email') }}" placeholder="E-mail">
					<br>
					<button type="submit" name="submit">SIGN UP</button>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
