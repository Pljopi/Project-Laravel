{% extends "layouts/base_html.twig" %}

{% block CONTENT %}
	<section class="index-login">
		<div class="wrapper">
			<div class="index-login-signup">
				<h4>SIGN UP</h4>
				<p>Don't have an account yet? Sign up here!</p>
				<form action="{{ route ('register-user') }}" method="post">


					{% if session ('success') %}
						<div class="alert alert-sucess">{{ session ('success') }}</div>
					{% endif %}
					{% if session ('fail') %}
						<div class="alert alert-sucess">{{ session ('fail') }}</div>
					{% endif %}
					{{ csrf_field () }}
					<div class="form-group">

						<input type="text" class="form-control" name="username" value="{{ old ('name') }}" placeholder="Username">
						{% if errors.first('username') %}
							<div class="alert alert-danger">
								<ul>{{ errors.first('username')}}</ul>
							</div>
						{% endif %}
					</div>


					<div class="form-group">

						<input type="password" class="form-control" name="password" placeholder="Password">
						{% if errors.first('password')%}
							<div class="alert alert-danger">
								<ul>{{ errors.first('password') }}</ul>
							</div>
						{% endif %}
					</div>


					<div class="form-group">

						<input type="password" class="form-control" name="password_confirmation" placeholder="Repeat Password">
						{% if errors.first('password_confirmation') %}
							<div class="alert alert-danger">
								<ul>{{ errors.first('password_confirmation') }}</ul>
							</div>
						{% endif %}
					</div>


					<div class="form-group">

						<input type="text" class="form-control" name="email" value="{{ old ('email') }}" placeholder="E-mail">
						{% if errors.first('email')%}
							<div class="alert alert-danger">
								<ul>{{ errors.first('email') }}</ul>
							</div>
						{% endif %}
					</div>


					<br>
					<button class="btn btn-block btn-primary" type="submit" name="submit">SIGN UP</button>
				</div>
			</form>
		</div>

	</section>
{% endblock %}
