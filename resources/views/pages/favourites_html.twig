{% extends "layouts/base_html.twig" %}

{% block CONTENT %}

	<div
		class="favourites">
		<h1>
			Your favourite currencies are:
		</h1>
		<p>
			Click on a currency to remove it from your favourites
		</p>
		<form
			method="get">
			{% for key in printFavourites %}
				<input
					type="submit"
					name="favourite"
					class="button"
					onclick="<script>window.location.reload();</script>" value="{{key}}"/>
			{% endfor %}

		</h2>
	</div>

	<script>
		if (window.history.replaceState) {
window.history.replaceState(null, null, window.location.href);
}
	</script>

{% endblock %}
